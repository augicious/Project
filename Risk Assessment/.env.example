# Copy to a secure location (recommended for server):
#   C:\ProgramData\RiskTicketing\.env
# Then point the service at it by setting ENV_FILE to that path.
# Do NOT commit the real .env.

# Waitress bind
FLASK_HOST=127.0.0.1
FLASK_PORT=5001

# App secrets
FLASK_SECRET_KEY=change-me-use-a-long-random-value

# Logging (optional)
RISK_TICKETING_LOG_DIR=C:\ProgramData\RiskTicketing\logs

# Microsoft 365 / Entra ID (OIDC)
OIDC_TENANT_ID=your-tenant-guid
OIDC_CLIENT_ID=your-client-guid
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=https://reportrisks.hdh.org/auth/callback
OIDC_POST_LOGOUT_REDIRECT_URI=https://reportrisks.hdh.org/

# Auth enforcement (optional)
AUTH_REQUIRED=true
